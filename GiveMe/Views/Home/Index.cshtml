@model IEnumerable<Project>
@{
    ViewData["Title"] = "Home Page";
}

    
            <div class="card card-image" style="background-image: url(https://journeyintodreams.com/wp-content/uploads/2015/02/money-dream-meaning1.jpg);">
                <div class="text-white text-center rgba-black-strong py-5 px-4">
                <h1 class="card-title py-3 font-weight-bold"><strong>Welcome to GiveMe</strong></h1><br>
                <h4 class="pb-3">A place where you can get money for your ideas!</h4>
                </div>
            </div>
       

        <div>
            <h2>
                Projects we like:
            </h2>
        </div>
        <div>

            @foreach (var project in Model)
            {
                if (project.Featured)
                {
                    <div class="card m-3">
                        <div class="card-header text-center">
                            <h3>
                                <a asp-controller="Home" asp-action="Project" asp-route-id="@project.Id">
                                    @project.Title
                                </a>
                            </h3>
                        </div>
                        <div class="card-body">
                            @if (project.ImageUrl != null)
                            {
                                <div class="text-center">
                                    <img src="@Url.Content(project.ImageUrl)" class="img-fluid" />
                                </div>
                            }
                        </div>
                        <div class="card-footer">
                            <h5>
                                @project.ShortDescription
                            </h5>
                        </div>

                    </div>
                }
            }
        </div>
