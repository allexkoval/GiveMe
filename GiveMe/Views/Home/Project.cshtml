@model ProjectViewModel
@{
    ViewData["Title"] = "Project";
}

<h1>@Model.Project.Title</h1>

<div>
    <progress style="" max="@Model.Project.Needed" value="@Model.Project.AlreadyFunded"></progress>
    <p>Funded @Model.Project.AlreadyFunded out of @Model.Project.Needed</p>
</div>

<div class="text-center">
    <a asp-controller="Home" asp-action="Donate" asp-route-id="@Model.Project.Id"><button class="btm btn-success btn-lg btn-block" >Donate</button> </a>
</div>
@if (Model.Project.ImageUrl != null)
{
    
        <div class="text-center">
    <img src="@Url.Content(Model.Project.ImageUrl)" class="img-fluid rounded"  />
        </div>
    
}
<p> @Model.Project.ShortDescription</p>
<p> @Model.Project.Body</p>

@if (Model.UserId == Model.CreatedBy || Model.AdminRole)
{

    <div>
        <p>
            <a asp-controller="Home" asp-action="Edit" asp-route-id="@Model.Project.Id">
                Edit
            </a>

            <a asp-controller="Home" asp-action="Remove" asp-route-id="@Model.Project.Id">
                Remove
            </a>
        </p>
    </div>
}

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Comments">Comments</a>
         </div>
</nav>

