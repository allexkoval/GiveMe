@model IEnumerable<Project>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to GiveMe</h1>
    <p>A place where you can get money for your ideas!</p>
</div>
<div>
    <h2>
        Projects we like:
    </h2>
</div>
<div>
 
    @foreach(var project in Model)
    {
        if (project.Featured)
        {
            <div class="card m-3">
                <div class="card-header text-center">
                    <h3>
                        @project.Title
                    </h3>
                </div>
                <div class="card-body">
                    @if(project.ImageUrl != null)
                    {
                    <div class="text-center">
                        <img src="@Url.Content(project.ImageUrl)" class="img-fluid"  />
                    </div>
                    }
                </div>
                <div class="card-footer">
                    <h5>
                        @project.ShortDescription
                    </h5>
                </div>

            </div>
        }
    }
</div>
