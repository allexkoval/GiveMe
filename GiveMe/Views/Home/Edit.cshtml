@model Project

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div>
    <form asp-controller="Home" asp-action="Edit" method="post">
        <input asp-for="Id" type="hidden" />
        <input asp-for="UserId" type ="hidden" />
        <input asp-for="Featured" type ="hidden" />
        <div>
            <label>Title</label>
            <input asp-for="Title" />
        </div>

        <div>
